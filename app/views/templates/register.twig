{% extends "templates/partials/base.twig" %}

{% block title %} LMS - Register {% endblock %}

{% block body %}
<container id="flex">
    <div class="text-center mt-5 font-weight-normal" id="login">
        <form action="/register" method="POST" style="max-width: 480px;margin:auto;" id="loginForm">
            <h1 class="h3 mb-3 font-weight-normal">Register</h1>
            <input type="text" name="username" placeholder="Username" class="form-control">
            <input type="text" name="name" placeholder="Name" class="form-control">
            <input type="text" name="eno" placeholder="Enrollment Number" class="form-control">
            <input type="password" name="password" placeholder="Password" class="form-control">
            <input type="password" name="confirmPassword" placeholder="Confirm Password" class="form-control">
            <input type="submit" value="Register" class="btn btn-lg btn-primary btn-block">
            <span>Already have an ID? Login <a href="/login">here</a></span>
        </form>
    </div>
</container>
{% endblock %}