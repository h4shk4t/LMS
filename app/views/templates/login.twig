{% extends "templates/partials/base.twig" %}

{% block title %} LMS - Login {% endblock %}

{% block body %}
<container id="flex">
    <div class="text-center align-middle mt-5" id="login">
        <form action="/login" method="POST" style="max-width: 480px;margin:auto;" id="loginForm">
            <h1 class="h3 mb-3 font-weight-normal">Login</h1>
            <input type="text" name="username" class="form-control mt-2" placeholder="Enter Username" required autofocus>
            <input type="password" name="password" class="form-control pd-2" placeholder="password" required autofocus>
            <div class="mt-3">
                <input type="submit" value="Login" class="btn btn-lg btn-primary btn-block">
            </div>
            <span class="font-weight-normal">Do not have an ID? Create one <a href="/register">here</a></span>
        </form>
    </div>
</container>
{% endblock %}