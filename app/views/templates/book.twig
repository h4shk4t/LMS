{% extends "templates/partials/base.twig" %}

{% block title %} LMS - {{book.NAME}} {% endblock %}

{% block body %}
<main>
        <div class="book">
            <table class="table">
                <thead>
                    <th scope="col">Name</th>
                    <th scope="col">Author</th>
                    <th scope="col">Status</th>
                <th scope="col">Quantity</th>
                    <th scope="col">Option</th>
                </thead>
                <tr>
                    <td>{{ book.NAME }}</td>
                    <td>{{ book.AUTHOR }}</td>
                    <td>{{ book.STATUS }}</td>
                    <td>{{ book.QUANTITY }}</td>
                    {%if (book.STATUS === "AVAILABLE" && book.ID != user.BOOKID) %}
                        <td><a href={{ "/book/" +book.ID + "/" + user.USERID }} ><button>Request Book</button></a></td> 
                    {% elseif book.ID===user.BOOKID %}
                        <td> <a href= {{ "/book/"+book.ID+"/"+user.USERID+"/return"}} ><button onclick="location.href='/book'">Return</button></td></a>
                    {% else %}
                        <td><button disabled>Book Unavailable</button></td>
                    {% endif %}
                </tr>
            </table>
        </div>
    </main>
{% endblock %}